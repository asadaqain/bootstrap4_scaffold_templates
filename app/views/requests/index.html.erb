<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead class="thead-dark">
      <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Department</th>
          <th scope="col">Contact phone</th>
          <th scope="col">Number of sections</th>
          <th scope="col">Integer</th>
          <th scope="col">Comment</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr>
            <td><%= request.name %></td>
            <td><%= request.email %></td>
            <td><%= request.department %></td>
            <td><%= request.contact_phone %></td>
            <td><%= request.number_of_sections %></td>
            <td><%= request.integer %></td>
            <td><%= request.comment %></td>
            <td><%= link_to 'Show', request, class: 'btn btn-sm btn-primary' %></td>
          <td><%= link_to 'Edit', edit_request_path(request), class: 'btn btn-sm btn-secondary' %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Request', new_request_path %>